<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionTracker.Views.FoodDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Food Name:" FontSize="Medium" />
        <Label Text="{Binding FoodName}" FontSize="Small"/>
        <Label Text="Weight(per 100g):" FontSize="Medium" />
        <Label Text="{Binding Weight}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>